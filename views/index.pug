extends layout

block content
  h1= title
  script (src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")

  p Welcome to #{title} the greatest javascript server ever!
  button(type="button", class="btn btn-secondary btn-success" onclick="double()") I am a button
  div(id="double") Up the amount
  script.
      var value = 0;
      var power = 1;
      
      function double(){
        value++;
        power *= 2;
        var divElement = document.getElementById("double");
        divElement.innerText = `Two to the power of ${value} is ${power}`
      }
  a(href="/rectangle") Rectangle
